@{
    ViewData["Title"] = "Application Status";
    Layout = "~/Views/Administrator/_layout.cshtml";
}


@model IEnumerable<WildcatMicroFund.Data.Models.Application>
@using System.Linq;


<!DOCTYPE html>

<html>
<head>
    
        <style>
            table {
                font-family: Arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    
    <title>Application Status List</title>
</head>

<body>
    <h2>Application Status Lookup</h2>

    <table>
        <tr>
            <th>First Name</th>
            <th>Business Name</th>
            <th>Application Status</th>
            <th>Change Status</th>

        </tr>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem =>item.BusinessID)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem=>item.ApplicationStatus)
                </td>

                <td>
                    <a asp-action="ChangeStatus" asp-route-id="@item.ID">Change Status</a>
                </td>

            </tr>
            }
        </tbody>
    </table>
</body>
</html>

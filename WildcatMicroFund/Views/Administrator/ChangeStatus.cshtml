@{
    ViewData["Title"] = "Application Status";
    Layout = "~/Views/Administrator/_layout.cshtml";
}

@model WildcatMicroFund.Data.Models.Application


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Application Status</title>
</head>
<body>

    <div>
        <h4>Application Status</h4>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                Application Status
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(a => a.ApplicationStatus.Description)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <form asp-action="ApplicationStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ApplicationStatusID" class="control-label">Application Status</label>
                    
                <select asp-for="ApplicationStatusID" class="form-control" asp-items="ViewBag.ApplicationStatusID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>